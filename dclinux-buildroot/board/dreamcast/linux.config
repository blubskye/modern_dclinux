# Dreamcast Linux Kernel Configuration (4.19.x)
# Based on SuperH SH4 architecture

#
# System Configuration
#
CONFIG_SYSVIPC=y
CONFIG_MODULES=y
CONFIG_MODULE_UNLOAD=y

#
# Processor type and features
#
CONFIG_CPU_SUBTYPE_SH7091=y
CONFIG_SH_DREAMCAST=y
CONFIG_MEMORY_START=0x8c000000
CONFIG_MEMORY_SIZE=0x01000000
CONFIG_FLATMEM_MANUAL=y
CONFIG_CMDLINE_FROM_BOOTLOADER=y
CONFIG_CMDLINE="console=ttySC1,115200"
CONFIG_HZ_100=y

#
# PCI support (for Broadband Adapter)
#
CONFIG_PCI=y

#
# Networking
#
CONFIG_NET=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IP_PNP=y
CONFIG_IP_PNP_DHCP=y
CONFIG_IP_PNP_BOOTP=y

#
# NFS client support
#
CONFIG_NFS_FS=y
CONFIG_NFS_V3=y
CONFIG_ROOT_NFS=y

#
# Block devices
#
CONFIG_BLK_DEV_RAM=y
CONFIG_BLK_DEV_RAM_COUNT=1
CONFIG_BLK_DEV_RAM_SIZE=8192
CONFIG_BLK_DEV_INITRD=y

#
# GD-ROM support
#
CONFIG_GDROM=y
CONFIG_CDROM_PKTCDVD=y
CONFIG_ISO9660_FS=y
CONFIG_JOLIET=y
CONFIG_ZISOFS=y

#
# MTD support (Memory Technology Devices)
#
CONFIG_MTD=y
CONFIG_MTD_BLOCK=y
CONFIG_MTD_CHAR=y

#
# VMU flash memory card support
#
CONFIG_MTD_MAP_BANK_WIDTH_1=y
CONFIG_MTD_MAP_BANK_WIDTH_2=y
CONFIG_MTD_MAP_BANK_WIDTH_4=y
CONFIG_MTD_CFI_I1=y
CONFIG_MTD_CFI_I2=y
CONFIG_MTD_VMU=y

#
# SCSI support
#
CONFIG_SCSI=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_SR=y
CONFIG_CHR_DEV_SG=y

#
# Network device support
#
CONFIG_NETDEVICES=y

# RTL8139 Broadband Adapter
CONFIG_8139TOO=y
CONFIG_8139TOO_PIO=y

#
# Input device support - Maple bus
#
CONFIG_INPUT=y
CONFIG_INPUT_KEYBOARD=y
CONFIG_INPUT_MOUSE=y
CONFIG_MAPLE=y
CONFIG_KEYBOARD_MAPLE=y
CONFIG_MOUSE_MAPLE=y
CONFIG_SERIO=y

#
# Serial drivers
#
CONFIG_SERIAL_SH_SCI=y
CONFIG_SERIAL_SH_SCI_NR_UARTS=2
CONFIG_SERIAL_SH_SCI_CONSOLE=y

#
# Graphics support - PowerVR2
#
CONFIG_FB=y
CONFIG_FB_PVR2=y
CONFIG_FRAMEBUFFER_CONSOLE=y
CONFIG_LOGO=y
CONFIG_LOGO_SUPERH_CLUT224=y

#
# DMA support (required for AICA sound)
#
CONFIG_SH_DMA=y
CONFIG_SH_DMA_API=y

#
# Sound support - ENABLED (API fixed with patch)
#
CONFIG_SOUND=y
CONFIG_SND=y
CONFIG_SND_PCM=y
CONFIG_SND_AICA=y

#
# Filesystems
#
CONFIG_EXT2_FS=y
CONFIG_EXT3_FS=y
CONFIG_EXT4_FS=y
CONFIG_MSDOS_FS=y
CONFIG_VFAT_FS=y
CONFIG_FAT_DEFAULT_CODEPAGE=437
CONFIG_FAT_DEFAULT_IOCHARSET="iso8859-1"
CONFIG_PROC_FS=y
CONFIG_PROC_SYSCTL=y
CONFIG_SYSFS=y
CONFIG_TMPFS=y
CONFIG_TMPFS_POSIX_ACL=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

#
# Native Language Support
#
CONFIG_NLS=y
CONFIG_NLS_DEFAULT="iso8859-1"
CONFIG_NLS_CODEPAGE_437=y
CONFIG_NLS_ISO8859_1=y
CONFIG_NLS_UTF8=y

#
# Kernel debugging (disable for production)
#
# CONFIG_DEBUG_KERNEL is not set
CONFIG_PRINTK=y
CONFIG_EARLY_PRINTK=y
